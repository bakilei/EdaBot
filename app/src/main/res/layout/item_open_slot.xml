<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/friend_item_container"
        android:layout_width="397dp"
        android:layout_height="93dp"
        android:layout_marginLeft="@dimen/layout_spacing_8dp"
        android:layout_marginTop="@dimen/layout_spacing_8dp"
        android:layout_marginRight="@dimen/layout_spacing_8dp"
        android:background="@drawable/background"
        android:padding="@dimen/layout_spacing_4dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_open_slot_start_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/first_name"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_open_slot_end_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/first_name"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_open_slot_start_at" />

        <Button
            android:id="@+id/bt_open_slot_give"
            style="@style/Button"
            android:layout_width="78dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:padding="@dimen/layout_spacing_4dp"

            android:text="Взять слот"
            android:textSize="@dimen/text_size_11sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>